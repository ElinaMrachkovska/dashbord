<header class="header row g-0">
  <div class="col-3">
    {{> logo}}
  </div>

  <nav class="header_nav col-9 ">
    <div class="header_nav_right">
      {{>nav list=header}}
    </div>
  </nav>
</header>

<main class="main">
  {{#with info}}
  <div class="massages">
    <h1>{{title}}</h1>
    <div class="list">
      <p class="lst">{{description}}</p>
    </div>
  </div>
  {{/with}}
  {{#with form}}
  <form class="form">
    <div class="form_input_list">
      {{#each inputs}}
      <input type="{{type}}" placeholder="{{placeholder}}" name="{{name}}" class="form_input" id="form-input-{{id}}" />
      {{/each}}
    </div>
    {{#with checkbox}}
    <div class="form_checkbox">
      <input type="checkbox" name="{{name}}">
      <label>{{label}}</label>
    </div>
    {{/with}}
    <button type="submit" class="form_button">{{button}} </button>

 <hr>
      <p class="form_info">{{info}}</p>

  </form>
  {{/with}}
  <div class="advantages">
  {{#each advantages}}
  <div>
    <strong>{{title}}</strong>
    <p>{{text}}</p>
  </div>
  {{/each}}
</div>

</main>

<div class="upd">

{{#with updates}}
 
  <div class="lists">
    <h1>{{title}}</h1>
    {{#each list}}
    <div class="last">
      <div class="square {{#if @first}} square_b {{/if}} {{#if @last}} square_v {{else}} square_p {{/if}}">32x32</div>
      <div class="items">
      <span>{{nickname}}</span>
      <p>{{description}}</p>
     </div>
          </div>
    {{/each}}
    {{#with show_all}}
    <a class="a" href="{{url}}">{{text}}</a>
    {{/with}}
  </div>
  {{/with}}
  </div>

  <div class="expirience">
  {{#with expirience}}
  <h1>{{title}}</h1>
  <button class="hot">{{badge}}</button>
  <div class="club">
{{#each list}}
<div class="card_club">
  <h4>{{name}}</h4>
  <p>{{details}}</p>
</div>
{{/each}}
</div>
{{/with}}
</div>




<footer class="row footer">
  <div class="col-3">
    {{> logo}}
    <span class="footer_copyright">@ 2023-2024</span>
  </div>
  {{#each footer}}
  <div class="col-3  foot">
    <span class="footer_title">{{title}}</span>
    {{> nav list=links isVertical=true}}
  </div>
  {{/each}}
</footer>