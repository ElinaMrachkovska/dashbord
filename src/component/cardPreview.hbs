{{#with data}}
<div class="preview">
    <div class="preview_header">
        <span class="preview_data">{{date}}</span>
        {{#each category}}
        <span class="category preview_category_{{id}}">{{text}}</span>
        {{!-- <span class="category5">{{id}}</span> --}}
        {{/each}}
    </div>
    <strong class="preview_title">{{title}}</strong>
    <p class="preview_description">{{text}}</p>
    <a href="#">Continue reading</a>
</div>
{{/with}}